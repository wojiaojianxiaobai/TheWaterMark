<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:background="@drawable/mdialog_background"
    >



    <!--标题-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="提取水印"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_bright"
        />


    <!--提取水印隐藏框-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_getWaterMessage"
        >

        <!--请输入未被破坏的标识码-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请输入其中一张图中的标识码："
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            />
        <!--存放四个标识码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_imageOne"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/black_40"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    />
                <ImageView
                    android:id="@+id/iv_imageTwo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/black_40"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/iv_imageThree"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/black_40"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    />
                <ImageView
                    android:id="@+id/iv_imageFour"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/black_40"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    />
            </LinearLayout>

            <!--图片标识码-->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    标识码："
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    />
                <EditText
                    android:id="@+id/et_waterUri"
                    android:layout_marginLeft="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textColorHint="#666666"
                    />
            </LinearLayout>
        </LinearLayout>

        <!--水印密码输入框-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_waterPasswordTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="水印密码："
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                />
            <EditText
                android:id="@+id/et_water_password"
                android:layout_marginLeft="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textColorHint="#666666"
                />
        </LinearLayout>

        <!--提取水印和取消按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/water_bt_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="提取水印"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/water_bt_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="取消"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </LinearLayout>




    <!--显示水印隐藏框-->
    <LinearLayout
        android:id="@+id/ll_holdShowMessage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:id="@+id/water_photo"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/download_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="保存到本地"
            />
    </LinearLayout>



    <!--输入标识码窗口-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:id="@+id/ll_uriWindow"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="无法识别标识，请手动输入"
            android:textColor="@android:color/holo_red_light"
            android:textSize="25sp"
            />
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:id="@+id/iv_waterUri"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_photoUri"
            android:hint="请输入图片中的标识"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/bt_retry_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="提取水印"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/bt_retry_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="取消"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>